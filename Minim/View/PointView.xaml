                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="18">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase Amplitude="5" EasingMode="EaseOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:1" Value="18">
