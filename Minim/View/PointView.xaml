    <UserControl.RenderTransform>
        <CompositeTransform />
    </UserControl.RenderTransform>
    <i:Interaction.Behaviors>
        <el:MouseDragElementBehavior x:Name="dragFinishedBehavior" ConstrainToParentBounds="True" />
    </i:Interaction.Behaviors>
    <Grid x:Name="grid">
        <Image x:Name="imageView"
               Width="70"
               Height="70"
               Margin="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Canvas.ZIndex="1"
               RenderTransformOrigin="0.5,0.5"
               Source="{Binding ImgIcon}">
            <Image.RenderTransform>
                <CompositeTransform />
            </Image.RenderTransform>
        </Image>
        <Button x:Name="btnPoint"
                RenderTransformOrigin="0.5,0.5"
                Template="{StaticResource tmplBtnPoint}">
            <Button.RenderTransform>
                <CompositeTransform />
            </Button.RenderTransform>
        </Button>
        <Ellipse x:Name="ellipse"
                 Width="94"
                 Height="90"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Opacity="0.995"
                 RenderTransformOrigin="0.5,0.5"
                 Stroke="White"
                 StrokeThickness="3"
                 Visibility="Collapsed">
            <Ellipse.RenderTransform>
                <CompositeTransform />
            </Ellipse.RenderTransform>
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Offset="0" Color="Black" />
                    <GradientStop Offset="1" Color="White" />
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse x:Name="ellipse1"
                 Width="35"
                 Height="35"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 RenderTransformOrigin="0.5,0.5"
                 StrokeThickness="3">
            <Ellipse.RenderTransform>
                <CompositeTransform />
            </Ellipse.RenderTransform>
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Offset="0.004" />
                    <GradientStop Offset="0.871" Color="White" />
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>