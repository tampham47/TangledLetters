                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0.73" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.7" Value="0.995" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
